model User {
  id              String           @id @default(uuid())
  email           String           @unique
  password        String?
  picture         String?
  name            String
  phone           String
  role            Role             @default(CONSUMER)
  isActive        Boolean          @default(true)
  address         String?
  isDeleted       Boolean          @default(false)
  isBlocked       Boolean          @default(false)
  provider        String?
  otp             String?
  otpExpiresAt    String?
  isEmailVerified Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  customerId      String?
  serviceProvider ServiceProvider?
  stripeAccountId String?
  services        Service[]

  sentMessages              Message[]      @relation("SentMessages")
  receivedMessages          Message[]      @relation("ReceivedMessages")
  conversationsAsUser1      Conversation[] @relation("User1Conversations")
  conversationsAsUser2      Conversation[] @relation("User2Conversations")
  fromReviews               Review[]       @relation("FromReviews")
  toReviews                 Review[]       @relation("ToReviews")
  customerIdFromStripe      String?
  paymentMethodIdFromStripe String?

  sentNotifications     Notification[] @relation("SentNotifications")
  receivedNotifications Notification[] @relation("ReceivedNotifications")
  order                 Order[]
  disputesBy            Dispute[]      @relation("DisputeBy")
}

enum Role {
  ADMIN
  CONSUMER
  SERVICE_PROVIDER
  SUPER_ADMIN
}
