model Review {
  id      String  @id @default(uuid())
  rating  Int
  comment String?

  serviceId String?

  fromReviewId String // Reviewer user ID
  toReviewId   String // Reviewee user ID

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations

  service Service? @relation(fields: [serviceId], references: [id])

  // Reviewer / Reviewee relations
  fromReview User @relation("FromReviews", fields: [fromReviewId], references: [id])
  toReview   User @relation("ToReviews", fields: [toReviewId], references: [id])
}
